<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.kurento.kmf" />

	<bean id="mediaApiConfiguration" class="com.kurento.kmf.media.MediaApiConfiguration">
		<property name="handlerAddress" value="${kurento.handlerAddress}" />
		<property name="handlerPort" value="${kurento.handlerPort}" />

		<!--

		To change this values you have two options:

		1. Launch maven adding parameters to set the variables value:

			$ mvn test -Dkurento.serverAddress=myServer.domain

		2. Modify your maven settings.xml to add the default values:

			Example settings.xml file:

				<settings>
				  <profiles>
				    <profile>
				      <id>kmstests</id>
				      <activation>
				        <activeByDefault>true</activeByDefault>
				      </activation>
				      <properties>
				        <kurento.serverAddress>localhost</kurento.serverAddress>
				        <kurento.serverPort>9090</kurento.serverPort>
				        <kurento.handlerAddress>localhost</kurento.handlerAddress>
				        <kurento.handlerPort>9191</kurento.handlerPort>
				      </properties>
				    </profile>
				  </profiles>
				</settings>
		 -->
	</bean>

	<bean id="thriftInterfaceConfiguration" class="com.kurento.kmf.thrift.ThriftInterfaceConfiguration">
		<property name="serverAddress" value="${kurento.serverAddress}" />
		<property name="serverPort" value="${kurento.serverPort}" />

		<!--

		To change this values you have two options:

		1. Launch maven adding parameters to set the variables value:

			$ mvn test -Dkurento.serverAddress=myServer.domain

		2. Modify your maven settings.xml to add the default values:

			Example settings.xml file:

				<settings>
				  <profiles>
				    <profile>
				      <id>kmstests</id>
				      <activation>
				        <activeByDefault>true</activeByDefault>
				      </activation>
				      <properties>
				        <kurento.serverAddress>localhost</kurento.serverAddress>
				        <kurento.serverPort>9090</kurento.serverPort>
				        <kurento.handlerAddress>localhost</kurento.handlerAddress>
				        <kurento.handlerPort>9191</kurento.handlerPort>
				      </properties>
				    </profile>
				  </profiles>
				</settings>
		 -->
	</bean>

</beans>
