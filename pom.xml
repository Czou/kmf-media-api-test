<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.kurento</groupId>
		<artifactId>kmf-parent-pom</artifactId>
		<version>3.0.7-SNAPSHOT</version>
	</parent>

	<groupId>com.kurento.kmf</groupId>
	<artifactId>kmf-media-api-test</artifactId>
	<packaging>jar</packaging>

	<name>kmf-media-api-test</name>

	<profiles>
		<!-- Default values for testing -->
		<profile>
			<id>serverAddress</id>
			<activation>
				<property>
					<name>!kurento.serverAddress</name>
				</property>
			</activation>
			<properties>
				<kurento.serverAddress>localhost</kurento.serverAddress>
			</properties>
		</profile>
		<profile>
			<id>serverPort</id>
			<activation>
				<property>
					<name>!kurento.serverPort</name>
				</property>
			</activation>
			<properties>
				<kurento.serverPort>9090</kurento.serverPort>
			</properties>
		</profile>
		<profile>
			<id>handlerAddress</id>
			<activation>
				<property>
					<name>!kurento.handlerAddress</name>
				</property>
			</activation>
			<properties>
				<kurento.handlerAddress>localhost</kurento.handlerAddress>
			</properties>
		</profile>
		<profile>
			<id>handlerPort</id>
			<activation>
				<property>
					<name>!kurento.handlerPort</name>
				</property>
			</activation>
			<properties>
				<kurento.handlerPort>9191</kurento.handlerPort>
			</properties>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>com.kurento.kmf</groupId>
			<artifactId>kmf-media-api</artifactId>
			<version>${kmf-media-api.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context-support</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>
	</build>
	
</project>
