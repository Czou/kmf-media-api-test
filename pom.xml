<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.kurento</groupId>
		<artifactId>kmf-parent-pom</artifactId>
		<version>4.2.1</version>
	</parent>

	<groupId>com.kurento.kmf</groupId>
	<artifactId>kmf-media-api-test</artifactId>
	<version>${project.parent.version}</version>
	<packaging>jar</packaging>

	<name>kmf-media-api-test</name>
	<description>
			Kurento Media Manager API Tests

			The Kurento kmf-media-api project allows server applications to control media server resources.
			This project contains the tests for the kmf-media-api project
	</description>
	<url>http://www.kurento.com/docs/${project.version}</url>

	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/licenses/lgpl-2.1.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<url>https://github.com/Kurento/${project.artifactId}</url>
		<connection>scm:git:https://github.com/Kurento/${project.artifactId}.git</connection>
		<developerConnection>scm:git:ssh://git@github.com:Kurento/${project.artifactId}.git</developerConnection>
		<tag>kmf-media-api-test-4.2.1</tag>
	</scm>

	<developers>
		<developer>
			<id>kurento.org</id>
			<name>-kurento.org Community</name>
			<organization>Kurento.org</organization>
			<organizationUrl>http://www.kurento.org</organizationUrl>
		</developer>
	</developers>

	<profiles>
		<!-- Default values for testing -->
		<profile>
			<id>serverAddress</id>
			<activation>
				<property>
					<name>!kurento.serverAddress</name>
				</property>
			</activation>
			<properties>
				<kurento.serverAddress>localhost</kurento.serverAddress>
			</properties>
		</profile>
		<profile>
			<id>serverPort</id>
			<activation>
				<property>
					<name>!kurento.serverPort</name>
				</property>
			</activation>
			<properties>
				<kurento.serverPort>9090</kurento.serverPort>
			</properties>
		</profile>
		<profile>
			<id>handlerAddress</id>
			<activation>
				<property>
					<name>!kurento.handlerAddress</name>
				</property>
			</activation>
			<properties>
				<kurento.handlerAddress>localhost</kurento.handlerAddress>
			</properties>
		</profile>
		<profile>
			<id>handlerPort</id>
			<activation>
				<property>
					<name>!kurento.handlerPort</name>
				</property>
			</activation>
			<properties>
				<kurento.handlerPort>9191</kurento.handlerPort>
			</properties>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>com.kurento.kmf</groupId>
			<artifactId>kmf-media-api</artifactId>
			<version>${kmf-media-api.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context-support</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>
	</build>
	
</project>
